<% content_for :javascript do %>
  <script type="text/javascript">
    ShopifyApp.ready(function(){
      ShopifyApp.Bar.initialize({
        title: "Settings",
        buttons: {
          primary: {
            label: 'Home',
            href: "/"
          }
        }
      });
    });
  </script>
<% end %>
<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <div class="panel panel-primary">
        <div class="panel-heading">Printex API Token</div>
        <div class="panel-body">
          <%= form_tag save_token_path,:method => :PATCH do |f| %>
          <div class="form-group">
            <%= text_field_tag :printex_token, @thisshop[:printex_token] ,:class => "form-control" %>
          </div>
          <div class="form-group">
            <%= submit_tag :Save , :class => "btn btn-success" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<% if @show_notification %>
<script>
  $(document).on("turbolinks:load",function(){
    ShopifyApp.flashNotice("API Token saved successfully");
  });
</script>
<% end %>
