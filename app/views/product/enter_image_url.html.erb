<div class="container-fluid">
  <div class="row">
    <% if @product_db["image"] %>
    <div class="col-xs-12">
      <div class="img-choice-wraper">
        <img src="<%= @product_db["image"] %>" alt="">
      </div>
    </div>
    <% end %>
    <div class="col-xs-12">
      <form method="POST" action="<%= save_image_path %>" id="chooseImageForm" data-remote="true">
        <input type="hidden" name="product_id" value="<%= @product.id %>">
        <div class="form-group mt-2">
          <label for="image_src">Enter URL here:</label>
          <input type="url" class="form-control" placeholder="http://url-goes-here.com" name="image_src" id="image_src" value="<%= @product_db["image"] %>">
        </div>
      </form>
    </div>
  </div>
</div>
<style>
  .img-choice-wrapper {
      height: 130px;
      margin-top: 10px;
  }
  .img-choice-wrapper img {
      object-fit: contain;
      height: 100%;
      width: 100%;
      background: none;
      cursor: pointer;
  }
  .img-choice-wrapper img.img-thumbnail.selected{
    border-color: #5967c3;
  }
</style>
